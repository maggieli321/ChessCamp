<h1>Inactive Locations</h1>
<% if @inactive_locations.size == 0 %>
  Sorry, there are no locations to be displayed.
<% else %>
  <table class="table">
    <tr>
      <th width="200">Name</th>
      <th width="200">Address</th>
      <th width="100">Capacity</th>
      <th></th>
      <th></th>
    </tr>

  <% @inactive_locations.each do |location| %>
    <tr>
      <td><%= link_to location.name, location_path(location) %></td>
      <td align="center"><%= location.street_1 %> <%= location.street_2 %></td>
      <td align="center"><%= location.max_capacity %></td>
      <td><%= link_to 'Edit', edit_location_path(location), class: "button tiny radius" %></td>
    </tr>
  <% end %>
  </table>
<% end %>
<!-- Add the pagination using will_paginate gem -->
<span class="paginate">
<%= will_paginate @inactive_locations, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>