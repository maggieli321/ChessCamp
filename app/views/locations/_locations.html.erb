<h3><%= status %> Camps</h3>

<table class="table">
  <tr>
    <th width="260">Name</th>
    <th width="120">Address</th>
    <th width="120">Street 2</th>
    <th width="260">City</th>
    <th width="120">State</th>
    <th width="120">Zip</th>
    <th width="260">Capacity</th>
    <th width="120">Active</th>
    <th></th>
    <th></th>
  </tr>

<% locations.each do |location| %>
  <tr>
    <td><%= link_to location.name, location_path(location) %></td>
    <td align="center"><%= location.street_1 %></td>
    <td align="center"><%= location.street_2 %></td>
    <td align="center"><%= location.max_capacity %></td>


  </tr>
<% end %>
</table>
<!-- Add the pagination using will_paginate gem -->
<span class="paginate">
<%= will_paginate locations, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>