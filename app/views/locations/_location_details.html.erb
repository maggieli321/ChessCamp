<h1><%= @location.name %> Location Details</h1>

<div class="formtext">
<strong>Address:&nbsp;&nbsp;</strong> 
  <%= @location.street_1 %>
  <%= @location.street_2 %>
  <%= @location.city %>,
  <%= @location.state %>
  <%= @location.zip %><br /><br />

<% if !@location.city.empty? %>
	<strong>City:&nbsp;&nbsp;</strong> 
		<%= @location.city %><br /><br />
<% end %>

<% if !@location.state.empty? %>
	<strong>State:&nbsp;&nbsp;</strong> 
		<%= @location.state %><br /><br />
<% end %>

<% if !@location.zip.empty? %>
	<strong>Zip:&nbsp;&nbsp;</strong> 
		<%= @location.zip %><br /><br />
<% end %>

<strong>Maximum Capacity: &nbsp;&nbsp;</strong>
  <%= @location.max_capacity %><br /><br />

<strong>Active: &nbsp;&nbsp;</strong>
  <%= @location.active ? "Yes" : "No" %><br /><br />

<% if !current_user.nil? %>
  <%= link_to "Edit this location", edit_location_path(@location) %>&nbsp;&nbsp;&nbsp;&nbsp;

<%= link_to 'Destroy location', location_path(@location), data: { confirm: 'Are you sure you want to permanently remove this location from the system?' }, method: :delete, class: "alert" %>
<% end %>
<br /><br />

