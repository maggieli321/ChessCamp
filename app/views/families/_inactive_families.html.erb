<h1>Inactive Families</h1>
<% if @inactive_families.size == 0 %>
  Sorry, there are no families to be displayed.
<% else %>

  <table class="table">
    <tr>
      <th width="150">Family Name</th>
      <th width="150">Parent First Name</th>
      <th width="100">Email</th>
      <th width="100">Phone</th>
      <th></th>
      <th></th>
    </tr>

  <% @inactive_families.each do |family| %>
    <tr>
      <td><%= link_to family.family_name, family_path(family) %></td>
      <td align="center"><%= family.parent_first_name %></td>
      <td align="center"><%= family.email %></td>
      <td align="center"><%= number_to_phone family.phone %></td>

      <td><%= link_to 'Edit', edit_family_path(family) %></td>
    </tr>
  <% end %>
  </table>

<% end %>
<!-- Add the pagination using will_paginate gem -->
<span class="paginate">
<%= will_paginate @inactive_families, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>