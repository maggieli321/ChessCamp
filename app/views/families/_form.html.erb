<%= simple_form_for(@family, html: { class: 'form-horizontal' }) do |f| %>
       
    <div class="row">
      <div class="small-6 columns">
        <h3><%= controller.action_name.capitalize %> Family</h3>
        <%= f.input :family_name %>
        <%= f.input :parent_first_name %>
        <%= f.input :email %>
        <%= f.input :phone %>
        <%= f.input :active %>
      </div>
      <div class="small-1 columns">&nbsp;</div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, class: 'button radius' %>
      <%= link_to 'Back to list of families', families_path, :class => 'button secondary radius' %>
    </div>

<% end %>